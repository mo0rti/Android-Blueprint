<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/abn_si_numeric_pad_height"
    android:background="@drawable/pinpad_button"
    android:backgroundTint="@null"
    android:backgroundTintMode="add"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@id/icAbnTechPinPadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_number_0"/>

        <TextView
            android:id="@id/tvAbnTechPinPadButton"
            android:textAppearance="@style/AbnSi.PinPad.Button.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/abn_si_spacing_small_x"
            tools:text="ABC" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
